                    <button class="btn btn-outline-dark me-lg-3" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Cart
                        @if (TempData["cartCount"] != null)
                        {
                            <span class="badge bg-dark text-white ms-1 rounded-pill">@TempData["cartCount"]</span>
                        }
                        else
                        {
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        }
                    </button>
                </form>




                <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
                    <li class="nav-item me-2">
                        @if (Session["user"] != null)
                        {
                            <span class="nav-link">@Session["user"].ToString()</span>
                        }
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("SignOut", "User")">Sign Out</a>
                    </li>
                </ul>







            </div>
        </div>
    </nav>



