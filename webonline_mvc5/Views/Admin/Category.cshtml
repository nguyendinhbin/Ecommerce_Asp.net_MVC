@model webonline_mvc5.Models.category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Category</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Mukta', sans-serif;
        }

        .form-61 {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .form-head {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        .text-head {
            color: #333;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>

    @using (Html.BeginForm("Category", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-4" }))
    {
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="form-61">
                        <h4 class="form-head">Add Category</h4>
                        <div class="form-group">
                            <label class="text-head" for="cat_name">Category Name</label>
                            @Html.TextBoxFor(x => x.cat_name, new { @class = "form-control", @placeholder = "Category Name" })
                            <span style="color:red">@Html.ValidationMessageFor(x => x.cat_name)</span>
                        </div>
                        <div class="form-group">
                            <label class="text-head" for="imgfile">Image</label>
                            <input type="file" name="imgfile" class="form-control-file" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Add Category</button>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Bootstrap JS and jQuery (required for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
