@model webonline_mvc5.Models.ad_view_model
@{
    ViewBag.Title = "ViewAdds";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- Link đến tệp CSS -->


    <style>
        /* CSS cho phần nội dung */
        .content-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .ad-details {
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

            .ad-details img {
                max-width: 100%;
                max-height: 200px; /* Giới hạn chiều cao của hình ảnh */
                height: auto;
                border-radius: 5px;
                margin-bottom: 10px;
            }

            .ad-details h1 {
                font-size: 24px;
                margin-bottom: 10px;
            }

        .product-details p {
            margin-bottom: 5px;
            font-size: 16px;
        }

        .product-details strong {
            margin-right: 5px;
        }

        .ad-details small {
            font-size: 12px;
            color: #777;
        }

        .close-add-btn {
            background-color: #d9534f;
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            .close-add-btn:hover {
                background-color: #c9302c;
            }
    </style>



</head>
<body>
    <div class="content-container">
        @if (Model != null)
        {
            <div class="ad-details">
                <div class="row">
                    <div class="col-lg-12">
                        <img src="@Url.Content(Model.pro_image)" class="img img-responsive" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <h1>@Model.pro_name <small>Ad:ID:@Model.pro_id</small></h1>
                        <div class="product-details">
                            <p><strong>Price:</strong> @Model.pro_price</p>
                            <p><strong>Category:</strong> @Model.cat_name</p>
                            <p><strong>Posted By:</strong> @Model.u_name <img src="@Url.Content(Model.u_image)" style="width: 40px; height: 40px; border-radius: 50%;" /></p>
                            <p><strong>Contact:</strong> @Model.u_phone</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_user_id_fk))
                        {
                            using (Html.BeginForm("Ad_tocart", "User"))
                            {
                                @Html.Hidden("id", Model.pro_id)
                                <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                            }
                        }
                    </div>
                </div>
            </div>
        }
        else
        {
            <p>No data available.</p>
        }
    </div>

</body>
</html>
