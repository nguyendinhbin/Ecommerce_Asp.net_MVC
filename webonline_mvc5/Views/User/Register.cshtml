@model webonline_mvc5.Models.tbl_user

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "User Register";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Register</title>
    <link rel="stylesheet" type="text/css" href="~/Content/loginstyle1.css"> <!-- Sử dụng CSS từ form đăng nhập -->
    <link href="//fonts.googleapis.com/css?family=Mukta:200,300,400,500,600,700,800" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/styles.css" type="text/css" media="all" />
</head>

<body>
    <br />
    <br />

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">User Register</div> <!-- Thay đổi tiêu đề -->
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="mb-3">
                                @Html.LabelFor(x => x.u_name, new { @class = "form-label" }) <!-- Thay đổi label -->
                                @Html.TextBoxFor(x => x.u_name, new { @class = "form-control", @placeholder = "Enter your username" }) <!-- Thay đổi placeholder -->
                                @Html.ValidationMessageFor(x => x.u_name, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(x => x.u_password, new { @class = "form-label" }) <!-- Thay đổi label -->
                                @Html.PasswordFor(x => x.u_password, new { @class = "form-control", @placeholder = "Enter your password" }) <!-- Thay đổi placeholder -->
                                @Html.ValidationMessageFor(x => x.u_password, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(x => x.u_phone, new { @class = "form-label" }) <!-- Thay đổi label -->
                                @Html.TextBoxFor(x => x.u_phone, new { @class = "form-control", @placeholder = "Enter your contact" }) <!-- Thay đổi placeholder -->
                                @Html.ValidationMessageFor(x => x.u_phone, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(x => x.u_email, new { @class = "form-label" }) <!-- Thay đổi label -->
                                @Html.TextBoxFor(x => x.u_email, new { @class = "form-control", @placeholder = "Enter your email" }) <!-- Thay đổi placeholder -->
                                @Html.ValidationMessageFor(x => x.u_email, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                <p class="text-head">Image</p>
                                <input type="file" name="imgfile" class="input" required />
                            </div>
                            <button type="submit" class="btn btn-primary">Register</button> <!-- Thay đổi nút đăng kí -->
                        }
                        <div class="mt-3">
                            <p>Already have an account? <a href="@Url.Action("Login", "User")">Login here</a>.</p> <!-- Thay đổi liên kết -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
</body>
</html>
